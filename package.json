{
  "name": "phishguard-root",
  "version": "1.0.0",
  "description": "PhishGuard - Advanced Phishing Detection System",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\" --names \"BACKEND,FRONTEND\" --prefix-colors \"bgBlue.bold,bgMagenta.bold\"",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "postinstall": "cd frontend && npm install && cd ../backend && npm install",
    "build": "cd frontend && npm run build",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run serve"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "phishing",
    "security",
    "detection",
    "cybersecurity"
  ],
  "author": "",
  "license": "MIT"
}